<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_medium">

    <ImageView
        android:id="@+id/iv_watch"
        android:layout_width="170dp"
        android:layout_height="115dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ted1" />

    <TextView
        android:id="@id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_watch"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_toRightOf="@id/iv_watch"
        android:text="Richard Seymour"
        android:textColor="#000000"
        android:textSize="@dimen/margin_medium_2" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_toRightOf="@id/iv_watch"
        android:text="How Beauty Feels"
        android:textColor="#000000"
        android:textSize="@dimen/margin_medium_2"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="@id/iv_watch"
        android:layout_alignParentBottom="@id/iv_watch"
        android:background="#000000"
        android:text="17:15"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_margin="@dimen/margin_medium"/>

</RelativeLayout>